<div class="row admin_row">
    <div class="col-md-11 col-md-offset-1">
    <h1>Dashboard</h1>
      <div class="col-md-11 admin_box_second3">
        <h2 class="admin_title"><i class="glyphicon glyphicon-chevron-right"></i>Users</h2>
            <div class="col-md-12  dashboard_box">
               <% @users.each do |user| %>
                    <div class="col-md-1">
                    <%= user.id %>
                    </div>

                    <div class="col-md-3">
                    <%= link_to "#{user.name}",user_path(user) %>
                    </div>

                    <div class="col-md-3">
                    <%= user.email %>
                    </div>

                    <div class="col-md-3">
                    <%= simple_time(user.updated_at) %>
                    </div>

                    <div class="col-md-2">
                    <%= link_to "削除",  admins_user_path(user), method: :delete %>
                    </div>
                <% end %>
            </div>
       </div>
   </div>
</div>


