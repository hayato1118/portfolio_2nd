<div class="">
	<div class="col-md-8 col-md-offset-2">

		<%= form_for @topic do |f|  %>

			<h3>タイトル</h3><%= f.text_field :title,class: "topic_title" %>

			<h3>記事内本文</h3><%= f.text_area :paragraph ,class: "topic_body" %>

			<h3>記事内コード</h3><%= f.text_area :body ,class: "topic_body" %>


			<h3>修正箇所</h3><%= f.text_area :re_body ,class: "topic_body" %>


			<h3>カテゴリー</h3>
			<%= collection_check_boxes(:topic, :category_ids, Category.all, :id, :category_name) do |b| %>
				<%= b.label { b.check_box + b.text }  %>
			<% end %>


			<h3>タグ</h3>
			<div class="">
				<%= f.fields_for :tags do |tag| %>
					<%= render 'tag_fields', f: tag %>
				<% end %>
				<div class="">
					<%= link_to_add_association '追加', f, :tags %>
				</div>
			</div>

			<h3>画像</h3><%= f.attachment_field :topic_image %>
			<%= f.submit "更新" ,class: "btn btn-default" %>
		<% end %>

	</div>
</div>


<div class="col-md-12 border_line">
</div>